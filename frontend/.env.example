# Frontend Environment Configuration
# Copy this file to .env.local and customize

# ==================================================
# API Configuration
# ==================================================

# Backend API URL
# For local development: http://localhost:8080
# For production: https://glass-pane-845772051724.us-central1.run.app
VITE_API_URL=http://localhost:8080

# ==================================================
# Firebase Configuration
# ==================================================

# Set to "true" to use local Firebase emulators
VITE_USE_FIREBASE_EMULATORS=true

# Firebase project configuration
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=diatonic-ai-gcp.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=diatonic-ai-gcp
VITE_FIREBASE_STORAGE_BUCKET=diatonic-ai-gcp.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# ==================================================
# Emulator Configuration
# (only used when VITE_USE_FIREBASE_EMULATORS=true)
# ==================================================

# Auth Emulator
VITE_FIREBASE_AUTH_EMULATOR_HOST=localhost
VITE_FIREBASE_AUTH_EMULATOR_PORT=9099

# Firestore Emulator
VITE_FIREBASE_FIRESTORE_EMULATOR_HOST=localhost
VITE_FIREBASE_FIRESTORE_EMULATOR_PORT=8181

# Storage Emulator
VITE_FIREBASE_STORAGE_EMULATOR_HOST=localhost
VITE_FIREBASE_STORAGE_EMULATOR_PORT=9199
